<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="servicePDPPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.pdp.servicepdp.model.Client</class>
    <class>com.pdp.servicepdp.model.ClientsSolicitation</class>
    <class>com.pdp.servicepdp.model.OrderPad</class>
    <class>com.pdp.servicepdp.model.Restaurant</class>
    <class>com.pdp.servicepdp.model.RestaurantTable</class>
    <class>com.pdp.servicepdp.model.RestaurantUnity</class>
    <class>com.pdp.servicepdp.model.Solicitation</class>
    <class>com.pdp.servicepdp.model.Category</class>
    <class>com.pdp.servicepdp.model.Item</class>
    <class>com.pdp.servicepdp.model.ItemPictures</class>
    <class>com.pdp.servicepdp.model.ItemsSolicitation</class>
    <class>com.pdp.servicepdp.model.Menu</class>
    <class>com.pdp.servicepdp.model.Picture</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/pdp"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
